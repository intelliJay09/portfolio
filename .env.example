# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient@gmail.com

# SMTP Performance Optimization (Phase 1 - Optimized for sub-3s response)
SMTP_POOL_MAX_CONNECTIONS=8
SMTP_POOL_MAX_MESSAGES=200
SMTP_CONNECTION_TIMEOUT=5000
SMTP_GREETING_TIMEOUT=5000
SMTP_SOCKET_TIMEOUT=15000
SMTP_RATE_DELTA=1000
SMTP_RATE_LIMIT=3
SMTP_VERIFY_CONNECTION=false

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_MS=3600000

# Features
SEND_CONFIRMATION_TO_SENDER=true
ENABLE_HTML_EMAILS=true
ENABLE_EMAIL_LOGGING=false

# Environment
NODE_ENV=development